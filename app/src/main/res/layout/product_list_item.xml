<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ll">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/oneplus_8t"
        android:padding="10dp"
        android:id="@+id/product_img"
        android:background="#F6F6F6"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name Product Name Product Name Product Name"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/product_name_txt"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deal of the Day"
            android:background="#D84315"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28,990"
            android:textSize="16dp"
            android:textColor="#D84315"
            android:id="@+id/product_price_txt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prime FREE One-Day \n FREE DElivery by Tomorrow"
            />


    </LinearLayout>

</LinearLayout>